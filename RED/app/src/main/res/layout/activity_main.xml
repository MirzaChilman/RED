<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/holo_red_dark"
    tools:context="com.greetink.android.red.MainActivity">

    <ImageView
        android:id="@+id/red_logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:keepScreenOn="true"
        android:onClick="info"
        android:src="@drawable/red_logo"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/app_name_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/red_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text="@string/app_name_description"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:layout_below="@+id/app_name_description"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Classic"
            android:id="@+id/classic"
            android:layout_weight="1"
            android:onClick="classic"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modern"
            android:id="@+id/modern"
            android:layout_weight="1"
            android:onClick="modern"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/info_creator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/red_logo"
        android:background="@android:color/white"
        android:visibility="gone">
        <ImageView
            android:id="@+id/undip"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/undip"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/creator"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/creator"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/creator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/creator"
            android:layout_below="@id/creator"
            android:textColor="@android:color/black"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/creator_nim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nim"
            android:layout_below="@id/creator_name"
            android:textColor="@android:color/black"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact"
            android:layout_below="@id/creator_nim"
            android:textColor="@android:color/black"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"/>
    </RelativeLayout>
</RelativeLayout>
